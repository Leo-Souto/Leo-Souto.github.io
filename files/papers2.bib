	number = {S1},
	urldate = {2024-02-14},
	journal = {International Journal of Technology Assessment in Health Care},
	author = {Bagattini, Ângela Maria and Rosa, Michelle and Simon, Lorena Mendes and Almeida, Gabriel Berg de and Ferreira, Leonardo Souto and Borges, Marcelo Eduardo and Kraenkel, Roberto André and Coutinho, Renato Mendes and Filho, José Alexandre Felizola Diniz and Camey, Suzi Alves and Kuchenbecker, Ricardo de Souza and Toscano, Cristiana Maria},
	month = dec,
	year = {2022},
	note = {Publisher: Cambridge University Press},
	pages = {S48--S49},
	file = {Full Text PDF:/home/leonardo/Zotero/storage/B3ZBW4UE/Bagattini et al. - 2022 - PP25 Brazilian Collaborative Network For COVID-19 .pdf:application/pdf},
}

@article{ferreira_modelling_2022,
