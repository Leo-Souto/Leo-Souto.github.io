@article{bagattini_pp25_2022,
	title = {{PP25} {Brazilian} {Collaborative} {Network} {For} {COVID}-19 {Modeling}: {Successful} {Experience} {Of} {Using} {Real}-{Time} {Science} {To} {Support} {Evidence}-{Based} {Decision}-{Making}},
